<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapperとxmlのマッピング -->
<mapper namespace="spring.todolist.repository.UserMapper">

	<!-- 姓名リスト取得 -->
	<select id="getUsersFullNameList" resultType="spring.todolist.domain.user.model.User">
		SELECT id , family_name , first_name FROM users;
	</select>

	<!-- ログインユーザー情報取得 -->
	<select id="findLoginUser" resultType="spring.todolist.domain.user.model.User">
		select
		*
		from
		users
		where
		user = #{username}
	</select>

</mapper>
  
